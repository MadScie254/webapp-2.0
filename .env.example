# Database
DATABASE_URL=postgresql://commons:commonspassword@postgres:5432/commons_ledger
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_NAME=commons_ledger
DATABASE_USER=commons
DATABASE_PASSWORD=commonspassword

# Redis
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379

# MinIO (S3-compatible object storage)
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET=commons-ledger
MINIO_USE_SSL=false

# JWT Authentication
SECRET_KEY=your-secret-key-change-this-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Backend API
BACKEND_URL=http://backend:8000
API_V1_PREFIX=/api/v1

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_NAME=Commons Ledger
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ML Models
MODEL_PATH=/app/models
ENABLE_ML_FEATURES=true

# OCR Configuration
TESSERACT_PATH=/usr/bin/tesseract
OCR_LANGUAGE=eng
OCR_TIMEOUT=30

# Celery
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# IPFS (Optional - for attestation hashing)
ENABLE_IPFS=false
IPFS_HOST=localhost
IPFS_PORT=5001

# Email (Optional - for notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@commonsledger.local

# Security
ENABLE_ENCRYPTION=true
ENCRYPTION_KEY=

# Feature Flags
ENABLE_INVOICE_FINANCING=true
ENABLE_CREDIT_SCORING=true
ENABLE_CASHFLOW_FORECASTING=true
ENABLE_ATTESTATIONS=true
ENABLE_KYC_LITE=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# File Upload Limits
MAX_UPLOAD_SIZE_MB=10
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png

# Audit
ENABLE_AUDIT_LOGGING=true
AUDIT_LOG_RETENTION_DAYS=365

# Development
DEBUG=false
RELOAD=false
